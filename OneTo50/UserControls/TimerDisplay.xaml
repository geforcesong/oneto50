<UserControl x:Class="OneTo50.UserControls.TimerDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <StackPanel Orientation="Horizontal">
        <TextBlock x:Name="tb1" Text="000" Style="{StaticResource DisplayTimer}" ></TextBlock>
        <TextBlock Text="." Style="{StaticResource DisplayTimer}" ></TextBlock>
        <TextBlock x:Name="tb2" Text="00" Style="{StaticResource DisplayTimer}" ></TextBlock>
    </StackPanel>
</UserControl>